<Page x:Class="SportingGodds.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportingGodds.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Login"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Canvas x:Name="CaptchaCanvas" Width="200" Height="50" Margin="0,10,0,0" Visibility="Collapsed"/>
            <TextBox x:Name="CaptchaInputTextBox" Margin="0,5,0,10" Width="100" Visibility="Collapsed"/>

            <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click" Margin="10" Background="#FF498C51"/>
            <Button x:Name="GuestButton" Content="Гость" Click="GuestButton_Click" Margin="10" Background="#FF498C51"/>
        </StackPanel>
    </Grid>
</Page>
